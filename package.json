{
  "name": "ts-express-quickstart",
  "version": "1.0.0",
  "description": "A quickstart template for building Node.js applications using Express and TypeScript.",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc && copyfiles -u 1 public/**/* dist",
    "serve": "cross-env NODE_ENV=prod node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphajoop/ts-express-quickstart.git"
  },
  "keywords": [
    "ts",
    "node",
    "express"
  ],
  "author": "Alpha DIOP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphajoop/ts-express-quickstart/issues"
  },
  "homepage": "https://github.com/alphajoop/ts-express-quickstart#readme",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5"
  }
}
